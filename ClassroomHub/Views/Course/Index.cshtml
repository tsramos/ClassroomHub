@using ClassroomHub.Web.ViewModels
@model IEnumerable<CourseViewModel>

<h1>Cursos</h1>
<br/>
<div class="row">
    <p>
        <partial name="_create" model="new CourseViewModel()"></partial>
    </p>
</div>
<table class="table table-striped table-hover text-center">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>                       
        </tr>
    </thead>
    @if (Model.Any())
    {
    <tbody>
        @foreach(var course in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(x => course.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" style="text-decoration: none;"><i class="fa fa-edit ml-2"></i></a>
                    <a data-toggle="modal" data-target="#removeConfirmation"><i class="fa fa-trash ml-2"></i></a>
                </td>
            </tr>
         <partial name="_delete" model="course.Id"></partial>
        }
    </tbody>
            
    }
    else
    {
        <p>Não há cursos cadastrados</p>           
    }
</table>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
       